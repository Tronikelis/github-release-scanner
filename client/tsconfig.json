{
    "compilerOptions": {
        "baseUrl": ".",

        "target": "ESNext",
        "module": "ESNext",
        "lib": ["ESNext", "DOM", "DOM.Iterable"],
        "esModuleInterop": true,

        "moduleResolution": "bundler",
        "isolatedModules": true,
        "jsx": "preserve",
        "jsxImportSource": "solid-js",

        "noEmit": true,

        "strict": true,
        "noFallthroughCasesInSwitch": true,
        "noUncheckedIndexedAccess": true,

        "types": ["vite/client"],

        "paths": {
            "~/*": ["./src/*"]
        }
    }
}
